<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insertar comando"
        android:inputType="text"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray" />

    <TextView
        android:id="@+id/relleno_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mandar_comando"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="IP: "
        android:textColor="@android:color/darker_gray"
        android:textSize="29dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mandar_comando"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/relleno_ip"
        android:text="10.8.0."
        android:textColor="@android:color/darker_gray"
        android:textSize="30dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mandar_comando"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:text="7"
        android:textColor="@android:color/darker_gray"
        android:textSize="30dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/mandar_comando"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="141dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/mandar_comando" />

    <TextView
        android:id="@+id/recibir_comando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mandar_comando"
        android:layout_centerHorizontal="true"
        android:text="" />
</RelativeLayout>
